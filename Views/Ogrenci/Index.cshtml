@model IEnumerable<Ogrenci>
 
@{
    ViewData["Title"] = "Öğrenci Listesi";
}

<h2></h2>

<hr>

<table class="table table-hover table-dark table-striped table-bordered">
<thead>
    <tr>
        <th style="width: 150px;">@Html.DisplayNameFor(m => m.OgrenciId)</th>
        <th>Öğrenci Adı</th>
        <th>Öğrenci Soyadı</th>
        <th style="width: 150px;"></th>
    </tr>
</thead>

<tbody>
    @foreach(var item in @Model)
    {
        <tr>
            <td>@item.OgrenciId</td>
            <td>@item.OgrenciAd</td>
            <td>@item.OgrenciSoyad</td>
            <td class="text-center">
                <a href="/Ogrenci/Edit/@item.OgrenciId" class="btn btn-sm btn-primary">Edit</a>
                <form asp-action="Delete" asp-controller="Ogrenci" method="post">
                    <input type="hidden" name="id" value="@item.OgrenciId" />
                    <button class="btn btn-sm btn-danger">Sil</button>
                </form>
            </td>
        </tr>
    }
</tbody>
</table>